.card
  border: 1px solid rgba(200,200,200,0.8)
  width: 240px
  font-size: 14px
  padding: 8px
  header
    display: flex
    align-items: center
    justify-content: space-between
    border-bottom: 1px solid lightgray
    figure
      margin: 0
      display: flex
      align-items: center
      img
        width: 32px
        border-radius: 50%
        padding-right: 3px
